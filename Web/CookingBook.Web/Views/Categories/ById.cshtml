@model CookingBook.Web.ViewModels.Categories.CategoryViewModel

@{
    this.ViewData["Title"] = @Model.Title + " Recipes";
}
<h1>@this.ViewData["Title"]</h1>

@foreach (var recipe in this.Model.Recipes)
{
<a href="/Recipes/ById/@recipe.Id">
    <div class="card" style="width: 18rem;">
        <img src="@recipe.Photo" class="card-img-top" alt="Image of the recipe">
        <div class="card-body">
            <h5 class="card-title">@recipe.Title</h5>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Servings: @recipe.Serving</li>
            <li class="list-group-item">Cook time: @recipe.CookTime</li>
        </ul>
        <div class="card-body">
            <a href="#" class="card-link">Add to favorites</a>
            <a href="#" class="card-link">Cook it!</a>
        </div>
    </div>
</a>
}
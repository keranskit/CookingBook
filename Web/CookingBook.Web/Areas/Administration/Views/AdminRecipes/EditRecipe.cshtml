@model CookingBook.Web.ViewModels.Administration.Main.AdminRecipeViewModel
@{
    ViewData["Title"] = "EditRecipes";
    var categories = Model.Categories.Select(x => new SelectListItem(x.Title, x.Id.ToString()));
}

<h1>EditRecipes</h1>

<form asp-controller="AdminRecipes" asp-action="EditById" method="post">
    <input type="hidden" asp-for="Id" value="@this.Model.Id" />
    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="CookProcedure"></label>
        <input asp-for="CookProcedure" class="form-control" />
        <span asp-validation-for="CookProcedure" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Photo"></label>
        <input asp-for="Photo" class="form-control" />
        <span asp-validation-for="Photo" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="CookTime"></label>
        <input asp-for="CookTime" class="form-control" />
        <span asp-validation-for="CookTime" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Serving"></label>
        <input asp-for="Serving" class="form-control" />
        <span asp-validation-for="Serving" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="categories" class="form-control"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <hr />
    <input type="submit" class="btn btn-primary" />
</form>
